@{
    ViewData["Title"] = "Agent Heartbeat";
}
<div class="row">
    <div class="col-sm-8">
        <h5>
            Agent Heartbeat
            <small></small>
        </h5>
    </div>
</div>
<br/>
<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered" style="width: 100%">
            <thead>
            <tr>
                <th>ID</th>
                <th>AGENT ID</th>
                <th>AGENT NAME</th>
                <th>FREE MEM</th>
                <th>CPU LOAD</th>
                <th>CREATIONTIME</th>
            </tr>
            </thead>
            <tbody>
            <tr v-if="items.length===0">
                <td colspan="7">None</td>
            </tr>
            <tr :id="item.id" v-else v-for="item in items">
                <td v-text="item.id"></td>
                <td v-text="item.agentId"></td>
                <td v-text="item.agentName"></td>
                <td v-text="item.freeMemory"></td>
                <td v-text="item.cpuLoad"></td>
                <td v-text="item.creationTime"></td>
            </tr>
            </tbody>
        </table>
    </div>
</div>
<div class="row" v-if="count > limit">
    <div class="col-md-12">
        <pagination :page="page" :count="count" :limit="limit"></pagination>
    </div>
</div>

@section scripts{
    <environment names="Development">
        <script src="~/js/agentHeartbeat.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/js/agentHeartbeat.min.js" asp-append-version="true"></script>
    </environment>
}